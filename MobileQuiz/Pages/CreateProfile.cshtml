@page
@model CreateProfileModel
@{
    
}
<script>

    $(document).ready(function () {
        $('#stewie').on("click", function () {
            $('#radStewie').attr('checked', true);
        });
        $('#apu').on("click", function () {
            $('#radApu').attr('checked', true);
        });
        $('#roger').on("click", function () {
            $('#radRoger').attr('checked', true);
        });
    });
</script>



<h2>Create Profile</h2>
<h2>@Model.DBload</h2>

<form method="post" runat="server" name="newuserform">
    <div id="profileForm" class="form-group">

        <label for="code">Session Code:</label>
        <input type="text" class="form-control" id="code" name="code"><br><br>

        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="name"><br><br>

        <label for="quote">Quote:</label>
        <input type="text" class="form-control" id="quote" name="quote"><br><br>

        <label for="image">Choose Icon:</label><br />
        <div id="stewie" class="card custom-control custom-radio custom-control-inline" style="width: 20%;">
            <img class="card-img-top" width="200" height="200" src="~/images/Stewie.png" alt="choice">
            <div class="card-body">
                <h3 class="card-title">Stewie Griffin</h3>
                <input type="radio" class="custom-control-input" name="character" id="radStewie">
            </div>
        </div>
        <div id="apu" class="card custom-control custom-radio custom-control-inline" style="width: 20%; ">
            <img class="card-img-top" width="200" height="200" src="~/images/Apu.png" alt="choice">
            <div class="card-body">
                <h3 class="card-title">Apu</h3>
                <input type="radio" class="custom-control-input" name="character" id="radApu">
            </div>
        </div>

        <div id="roger" class="card custom-control custom-radio custom-control-inline" style="width: 20%; ">
            <img class="card-img-top" width="200" height="200" src="~/images/Roger.png" alt="choice">
            <div class="card-body">
                <h3 class="card-title">Roger Smith</h3>
                <input type="radio" class="custom-control-input" name="character" id="radRoger">
            </div>
        </div>
        <br /><br />
        <input type="submit" class="btn btn-success"  id="btnSubmit" value="Submit"/>
    </div>
</form>

